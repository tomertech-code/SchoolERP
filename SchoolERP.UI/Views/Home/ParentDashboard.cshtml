@{
    ViewData["Title"] = "Parent Dashboard";
}
@{
    ViewData["Title"] = "Parent Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="~/css/parentdashboard.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid py-4">
        <!-- Page Header -->
        <div class="row mb-4 align-items-center justify-content-between">
            <div class="col-md-6">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-1">
                        <li class="breadcrumb-item"><a href="#" class="text-decoration-none">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Parent Dashboard</li>
                    </ol>
                </nav>
                <h3 class="mb-0">Parent Dashboard</h3>
            </div>
            <div class="col-md-6 d-flex justify-content-md-end justify-content-start mt-3 mt-md-0 dash-select-student">
                <h6 class="me-3 mb-0 align-self-center">Select Student</h6>
                <div class="d-flex">
                    <a href="#" class="avatar avatar-lg me-2 border border-primary rounded-circle p-1">
                        <img src="https://via.placeholder.com/80x80" alt="Student">
                    </a>
                    <a href="#" class="avatar avatar-lg border rounded-circle p-1">
                        <img src="https://via.placeholder.com/80x80" alt="Student">
                    </a>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <!-- Profile -->
            <div class="col-xxl-5 col-xl-12">
                <div class="card profile-card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <img src="https://via.placeholder.com/100x100" alt="Parent" class="avatar avatar-xxl me-3 rounded-circle">
                            <div>
                                <span class="badge bg-light text-primary mb-2">#P124556</span>
                                <h4 class="mb-1">Thomas Bown</h4>
                                <div class="d-flex align-items-center text-light">
                                    <span class="me-3">Added On: 25 Sep 2025</span>
                                    <span>Child: Janet</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Leave Actions and Stats -->
            <div class="col-xxl-7">
                <div class="row g-3">
                    <div class="col-xl-4">
                        <div class="row g-3">
                            <div class="col-12">
                                <a href="#" class="card bg-white border shadow-sm">
                                    <div class="card-body d-flex align-items-center">
                                        <i class="bi bi-calendar-event fs-4 text-muted me-2"></i>
                                        <h6 class="mb-0">Apply Leave</h6>
                                    </div>
                                </a>
                            </div>
                            <div class="col-12">
                                <a href="#" class="card bg-white border shadow-sm">
                                    <div class="card-body d-flex align-items-center">
                                        <i class="bi bi-chat-dots fs-4 text-muted me-2"></i>
                                        <h6 class="mb-0">Raise a Request</h6>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4">
                        <div class="card bg-info text-white text-center">
                            <div class="card-body">
                                <i class="bi bi-heart-pulse fs-4 mb-2"></i>
                                <h6 class="mb-2">Medical Leaves (10)</h6>
                                <div class="d-flex justify-content-around">
                                    <p class="mb-0">Used: 05</p>
                                    <p class="mb-0">Available: 05</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4">
                        <div class="card bg-primary text-white text-center">
                            <div class="card-body">
                                <i class="bi bi-calendar-check fs-4 mb-2"></i>
                                <h6 class="mb-2">Casual Leaves (12)</h6>
                                <div class="d-flex justify-content-around">
                                    <p class="mb-0">Used: 03</p>
                                    <p class="mb-0">Available: 09</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4 mt-4">
            <!-- Events List -->
            <div class="col-xxl-4 col-xl-6">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Events List</h5>
                        <a href="#" class="text-primary">View All</a>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            <div class="list-group-item d-flex align-items-start">
                                <img src="https://via.placeholder.com/80x50" alt="Event" class="me-3 rounded" style="width: 80px;">
                                <div class="flex-grow-1">
                                    <h6>Parents-Teacher Meet</h6>
                                    <p><i class="bi bi-calendar me-1"></i>15 Oct 2025</p>
                                </div>
                                <span class="badge bg-danger">Full Day</span>
                            </div>
                            <!-- Add more events -->
                        </div>
                    </div>
                </div>
            </div>
            <!-- Statistics -->
            <div class="col-xxl-8 col-xl-6">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Statistics</h5>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-calendar me-1"></i>This Month
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">This Month</a></li>
                                <li><a class="dropdown-item" href="#">This Year</a></li>
                                <li><a class="dropdown-item" href="#">Last Week</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="chart-placeholder">
                            Statistics Chart (Integrate ApexCharts)
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4 mt-4">
            <!-- Leave Status -->
            <div class="col-xxl-4 col-xl-6">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Leave Status</h5>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-calendar me-1"></i>This Month
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">This Month</a></li>
                                <li><a class="dropdown-item" href="#">This Year</a></li>
                                <li><a class="dropdown-item" href="#">Last Week</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-exclamation-triangle-fill text-danger fs-4 me-2"></i>
                                    <div>
                                        <h6>Emergency Leave</h6>
                                        <p>Date: 15 Sep 2025</p>
                                    </div>
                                </div>
                                <span class="badge bg-warning">Pending</span>
                            </div>
                            <!-- More leave status items -->
                        </div>
                    </div>
                </div>
            </div>
            <!-- Home Works -->
            <div class="col-xxl-4 col-xl-6">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Home Works</h5>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-book me-1"></i>All Subjects
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Physics</a></li>
                                <li><a class="dropdown-item" href="#">Chemistry</a></li>
                                <li><a class="dropdown-item" href="#">Maths</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            <div class="list-group-item d-flex align-items-start">
                                <img src="https://via.placeholder.com/80x50" alt="Homework" class="me-3 rounded" style="width: 80px;">
                                <div class="flex-grow-1">
                                    <p class="text-info mb-1"><i class="bi bi-tag me-1"></i>Physics</p>
                                    <h6>Write about Theory of Pendulum</h6>
                                    <div class="d-flex align-items-center">
                                        <img src="https://via.placeholder.com/30x30" alt="Teacher" class="avatar avatar-xs rounded-circle me-1">
                                        <span>Aaron</span>
                                        <span class="ms-2">Due: 16 Oct 2025</span>
                                    </div>
                                </div>
                            </div>
                            <!-- More homework items -->
                        </div>
                    </div>
                </div>
            </div>
            <!-- Fees Reminder -->
            <div class="col-xxl-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Fees Reminder</h5>
                        <a href="#" class="text-primary">View All</a>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-bus-front fs-4 text-info me-2"></i>
                                    <div>
                                        <h6>Transport Fees</h6>
                                        <p>$2500</p>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <h6>Last Date</h6>
                                    <p>25 Oct 2025</p>
                                </div>
                            </div>
                            <!-- More fees reminders -->
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4 mt-4">
            <!-- Exam Result -->
            <div class="col-xxl-8 col-xl-7">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center flex-wrap">
                        <h5 class="mb-0">Exam Result</h5>
                        <div class="d-flex gap-2">
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-funnel me-1"></i>All Classes
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">I</a></li>
                                    <li><a class="dropdown-item" href="#">II</a></li>
                                    <li><a class="dropdown-item" href="#">III</a></li>
                                </ul>
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-funnel me-1"></i>All Exams
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">Quarterly</a></li>
                                    <li><a class="dropdown-item" href="#">Practical</a></li>
                                    <li><a class="dropdown-item" href="#">1st Term</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Class</th>
                                        <th>Section</th>
                                        <th>Marks %</th>
                                        <th>Exams</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>35013</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="https://via.placeholder.com/40x40" alt="Student" class="avatar avatar-md rounded-circle me-2">
                                                <span>Janet</span>
                                            </div>
                                        </td>
                                        <td>III</td>
                                        <td>A</td>
                                        <td>89%</td>
                                        <td>Quarterly</td>
                                        <td><span class="badge bg-success">Pass</span></td>
                                    </tr>
                                    <!-- More rows -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Notice Board -->
            <div class="col-xxl-4 col-xl-5">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Notice Board</h5>
                        <a href="#" class="text-primary">View All</a>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-book fs-4 text-primary me-2"></i>
                                    <div>
                                        <h6>New Syllabus Instructions</h6>
                                        <p><i class="bi bi-calendar me-1"></i>Added on: 11 Sep 2025</p>
                                    </div>
                                </div>
                                <i class="bi bi-chevron-right"></i>
                            </div>
                            <!-- More notices -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">
        <h2 class="text-warning">Welcome, Parent</h2>
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card shadow-sm p-3">
                    <h5>Child's Progress</h5>
                    <a href="/Reports/ChildProgress" class="btn btn-warning btn-sm mt-2">View</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm p-3">
                    <h5>Exam Results</h5>
                    <a href="/Exams/Results" class="btn btn-success btn-sm mt-2">View</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm p-3">
                    <h5>Complaints</h5>
                    <a href="/StudentComplaints/Index" class="btn btn-danger btn-sm mt-2">View</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
