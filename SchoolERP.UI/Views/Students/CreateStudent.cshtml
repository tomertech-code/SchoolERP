@model SchoolERP.Data.Entities.Student

@{
    ViewData["Title"] = "Create Student";
}

<div class="container mt-5">
    <h1 class="text-center text-primary">Student Admission Form</h1>
    <h4 class="text-center mb-4">Please fill in the details to create a student profile</h4>

    <div class="card shadow-lg p-4">
        <form asp-action="CreateStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Personal Information Section -->
            <div class="form-section">
                <h5 class="text-primary">Personal Information</h5>
                <div class="row">
                    <!-- First Name -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FirstName" class="control-label">First Name</label>
                            <input asp-for="FirstName" class="form-control form-control-lg" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Last Name -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="LastName" class="control-label">Last Name</label>
                            <input asp-for="LastName" class="form-control form-control-lg" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Date of Birth -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Dob" class="control-label">Date of Birth</label>
                            <input asp-for="Dob" class="form-control form-control-lg" type="date" />
                            <span asp-validation-for="Dob" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Gender -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Gender" class="control-label">Gender</label>
                            <input asp-for="Gender" class="form-control form-control-lg" />
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Academic Information Section -->
            <div class="form-section mt-4">
                <h5 class="text-primary">Academic Information</h5>
                <div class="row">
                    <!-- User Dropdown -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="UserId" class="control-label">User</label>
                            <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-control form-control-lg">
                                <option value="">Select User</option>
                            </select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Class -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ClassId" class="control-label">Class</label>
                            <select asp-for="ClassId" asp-items="ViewBag.ClassId" class="form-control form-control-lg">
                                <option value="">Select Class</option>
                            </select>
                            <span asp-validation-for="ClassId" class="text-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="row">
                    <!-- Section -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SectionId" class="control-label">Section</label>
                            <input asp-for="SectionId" class="form-control form-control-lg" />
                            <span asp-validation-for="SectionId" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Admission Number -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="AdmissionNo" class="control-label">Admission Number</label>
                            <input asp-for="AdmissionNo" class="form-control form-control-lg" />
                            <span asp-validation-for="AdmissionNo" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Address Information Section -->
            <div class="form-section mt-4">
                <h5 class="text-primary">Address Information</h5>
                <div class="form-group">
                    <label asp-for="Address" class="control-label">Address</label>
                    <input asp-for="Address" class="form-control form-control-lg" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <!-- Enrollment Date -->
                <div class="form-group">
                    <label asp-for="EnrollmentDate" class="control-label">Enrollment Date</label>
                    <input asp-for="EnrollmentDate" class="form-control form-control-lg" type="date" />
                    <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg px-5 py-3">
                    <i class="bi bi-plus-circle"></i> Create Student
                </button>
            </div>
        </form>
    </div>

    <!-- Back to List Button -->
    <div class="mt-4 text-center">
        <a class="btn btn-outline-secondary btn-lg" asp-action="Index">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
