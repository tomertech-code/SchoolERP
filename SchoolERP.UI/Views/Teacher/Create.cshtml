@model SchoolERP.Data.Entities.Teacher

@{
    ViewData["Title"] = "Add New Teacher";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" />

<style>
    body {
        background-color: #f6f7fb;
        font-family: 'Inter', sans-serif;
    }

    h2 {
        font-weight: 700;
        color: #2d2d2d;
    }

    .card-section {
        border-radius: 12px;
        background: #fff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        margin-bottom: 25px;
        overflow: hidden;
    }

    .card-header {
        background-color: #4a3aff;
        color: white;
        font-weight: 600;
        padding: 12px 18px;
        font-size: 18px;
    }

    .form-label {
        font-weight: 500;
        font-size: 14px;
        margin-bottom: 5px;
    }

    .form-control, textarea, select {
        border-radius: 8px;
        border: 1px solid #ddd;
        padding: 10px;
        font-size: 14px;
    }

    textarea {
        resize: none;
    }

    .btn-submit {
        background-color: #4a3aff;
        border: none;
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: 600;
        color: white;
        transition: 0.2s;
    }

    .btn-submit:hover {
        background-color: #372bcc;
    }

    .btn-draft {
        background-color: transparent;
        border: 1px solid #aaa;
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: 600;
        color: #555;
        transition: 0.2s;
    }

    .btn-draft:hover {
        background-color: #eee;
    }

    .photo-upload {
        border: 2px dashed #ccc;
        border-radius: 10px;
        padding: 40px;
        text-align: center;
        color: #888;
        font-size: 14px;
        cursor: pointer;
        transition: border 0.2s;
    }

    .photo-upload:hover {
        border-color: #4a3aff;
        color: #4a3aff;
    }
</style>


<div class="container mt-4 mb-5">
    @* <h2 class="mb-4">Add New Teacher</h2> *@

    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Personal Details -->
        <div class="card-section">
            <div class="card-header">Personal Details</div>
            <div class="card-body row g-3 p-3">

                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="EmailId" class="form-label"></label>
                    <input asp-for="EmailId" type="email" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" class="form-control" />
                </div>

                <div class="col-md-12">
                    <label asp-for="Address" class="form-label"></label>
                    <textarea asp-for="Address" rows="3" class="form-control"></textarea>
                </div>

                <div class="col-md-6">
                    <label asp-for="DateOfBirth" class="form-label"></label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="PlaceOfBirth" class="form-label"></label>
                    <input asp-for="PlaceOfBirth" class="form-control" />
                </div>

                @* <div class="col-md-6">
                    <label class="form-label">Photo</label>
                    <div class="photo-upload">
                        Drag & drop or click here to select file
                        <input asp-for="Photo" type="file" class="form-control d-none" />
                    </div>
                </div> *@
            </div>
        </div>

        <!-- Education -->
        <div class="card-section">
            <div class="card-header">Education</div>
            <div class="card-body row g-3 p-3">

                <div class="col-md-6">
                    <label asp-for="University" class="form-label"></label>
                    <input asp-for="University" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="Degree" class="form-label"></label>
                    <input asp-for="Degree" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Start Date</label>
                    <input asp-for="StartDate" type="month" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">End Date</label>
                    <input asp-for="EndDate" type="month" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="City" class="form-label"></label>
                    <input asp-for="City" class="form-control" />
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="d-flex justify-content-end gap-3">
            <button type="button" class="btn-draft">Save as Draft</button>
            <button type="submit" class="btn-submit">Submit</button>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
