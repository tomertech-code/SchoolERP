@model SchoolERP.Data.Entities.Class

@{
    ViewData["Title"] = "Edit Class";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<h4 class="text-center">Edit Class</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="EditClass">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="ClassId" />

            <div class="form-group mb-3">
                <label asp-for="ClassName" class="control-label">Class Name</label>
                <input asp-for="ClassName" class="form-control" placeholder="Enter class name" />
                <span asp-validation-for="ClassName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success btn-block" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
