@model SchoolERP.Data.Entities.StudentTransport

@{
    ViewData["Title"] = "Assign Student to Bus";
}

<h2>Assign Student to Bus</h2>

<form asp-action="AssignStudentToBus" method="post">
    <div class="form-group">
        <label>Student</label>
        <select asp-for="StudentId" class="form-control" asp-items="ViewBag.Students">
            <option value="">-- Select Student --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Bus</label>
        <select asp-for="BusId" class="form-control" asp-items="ViewBag.Buses">
            <option value="">-- Select Bus --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Assign</button>
    <a asp-action="StudentTransports" class="btn btn-secondary">Cancel</a>
</form>
