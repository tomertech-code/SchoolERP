@model SchoolERP.Data.Entities.Subject

@{
    ViewData["Title"] = "Add Subjects";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<h4 class="text-center">Add New Subject</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="AddSubjects">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="SubjectName" class="control-label">Subject Name</label>
                <input asp-for="SubjectName" class="form-control" placeholder="Enter subject name" />
                <span asp-validation-for="SubjectName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ClassId" class="control-label">Class</label>
                <select asp-for="ClassId" class="form-control" asp-items="ViewBag.ClassId">
                    <option value="">Select a class</option>
                </select>
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success btn-block" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
