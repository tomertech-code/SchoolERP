@model IEnumerable<SchoolERP.Data.Entities.Subject>

@{
    ViewData["Title"] = "Subject List";
}
<h1 class="text-center my-4 text-primary font-weight-bold display-4">
    @ViewData["Title"]
</h1>

<p>
    <a asp-action="AddSubjects" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SubjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Class.ClassName)
                </td>
                <td class="text-center">
                    <a asp-action="EditSubjects" asp-route-id="@item.SubjectId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.SubjectId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="DeleteSubject" asp-route-id="@item.SubjectId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this subject?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
