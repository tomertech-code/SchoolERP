@{
}
@model IEnumerable<SchoolERP.Data.Entities.Ptm>

<h2>Parent-Teacher Meetings</h2>
<a class="btn btn-primary" asp-action="Create">Schedule New PTM</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Date</th>
            <th>Class</th>
            <th>Agenda</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ptm in Model)
        {
            <tr>
                <td>@ptm.MeetingDate?.ToString("dd-MM-yyyy")</td>
                <td>@ptm.ClassId</td>
                <td>@ptm.Agenda</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@ptm.Ptmid" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@ptm.Ptmid" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
