@model SchoolERP.Data.Entities.Ptm

<h2>@(Model.Ptmid == 0 ? "Schedule PTM" : "Edit PTM")</h2>

<form asp-action="@(Model.Ptmid == 0 ? "Create" : "Edit")" method="post">
    <div class="form-group">
        <label asp-for="MeetingDate"></label>
        <input asp-for="MeetingDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ClassId">Class</label>
        <input asp-for="ClassId" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Agenda"></label>
        <textarea asp-for="Agenda" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
