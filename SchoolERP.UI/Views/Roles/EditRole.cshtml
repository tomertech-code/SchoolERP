@model SchoolERP.Common.DTOs.RoleDto

@{
    ViewData["Title"] = "Edit Role";
}

<h2>Edit Role</h2>

<form asp-action="EditRole" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="mb-3">
        <label for="name" class="form-label">Role Name</label>
        <input type="text" name="name" id="name" class="form-control" value="@Model.Name" required />
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="RolesIndex" class="btn btn-secondary">Back to List</a>
</form>
