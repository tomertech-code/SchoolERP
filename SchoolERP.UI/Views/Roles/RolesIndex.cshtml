@model IEnumerable<SchoolERP.Common.DTOs.RoleDto>

@{
    ViewData["Title"] = "Roles Management";
}

<h2 class="mb-3">Roles Management</h2>

<p>
    <a asp-action="CreateRole" class="btn btn-primary">Create New Role</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Role Id</th>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center text-muted">No roles found.</td>
            </tr>
        }
    </tbody>
</table>
