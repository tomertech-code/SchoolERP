@{
    ViewData["Title"] = "Create Role";
}

<h2>Create New Role</h2>

<form asp-action="CreateRole" method="post">
    <div class="mb-3">
        <label for="roleName" class="form-label">Role Name</label>
        <input type="text" name="roleName" id="roleName" class="form-control" required />
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <button asp-action="CreateRole" asp-controller="Roles" class="btn btn-success">Create</button>
    <a asp-action="RolesIndex" class="btn btn-secondary">Back to List</a>
</form>
