                                    <span class="material-symbols-rounded">school</span>
                                    <span class="menu-label">Teachers</span>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="@Url.Action("SubjectList", "Subjects")" class="menu-link">
                                    <span class="material-symbols-rounded">book</span>
                                    <span class="menu-label">Subjects</span>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="@Url.Action("AssignmentList", "Assignments")" class="menu-link">
                                    <span class="material-symbols-rounded">assignment</span>
                                    <span class="menu-label">Assignments</span>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="@Url.Action("StudentComplaintList", "StudentComplaint")" class="menu-link">
                                    <span class="material-symbols-rounded">report_problem</span>
                                    <span class="menu-label">Complaints</span>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="@Url.Action("AttendeceList", "Attendance")" class="menu-link">
                                    <span class="material-symbols-rounded">check_circle</span>
                                    <span class="menu-label">Attendance</span>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="@Url.Action("ExamList", "Exam")" class="menu-link">
                                    <span class="material-symbols-rounded">school</span>
                                    <span class="menu-label">Exams</span>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="@Url.Action("Index", "ExamResult")" class="menu-link">
