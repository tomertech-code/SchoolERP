                            </li>
                        </ul>
                    </div>
                    <!-- Sidebar Footer -->
                    <div class="sidebar-footer">
                        <button class="theme-toggle">
                            <div class="theme-label">
                                <span class="theme-icon material-symbols-rounded">dark_mode</span>
                                <span class="theme-text">Dark Mode</span>
                            </div>
                            <div class="theme-toggle-track">
                                <div class="theme-toggle-indicator"></div>
                            </div>
                        </button>
                    </div>
                </aside>
                <!-- Main Content -->
              
        </aside>

        <!-- Main area -->
        <div class="flex-grow-1">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm sticky-top" style="height:88px">
                <div class="container-fluid">

                    <!-- Left: Logo / Branding -->
                    <div class="d-flex align-items-center me-3">
                        <img src="https://via.placeholder.com/32" alt="Logo" class="rounded me-2" height="32" width="32" />
                        <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">ERP</a>
                    </div>

                    <!-- Center: Nav Links -->
                    <div class="d-none d-md-flex mx-auto">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item"><a class="nav-link" href="#">Setting</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Help</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Sync</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Calendar</a></li>
                        </ul>
                    </div>

                    <!-- Institute Title -->
                    <div class="d-none d-lg-block me-4">
                        <h1 class="mb-0 fw-bolder" style="
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(90deg, #003399, #0052D4, #6FB1FC);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.25);
        letter-spacing: 2px;
        font-size: 3rem;
        text-transform: uppercase;
    ">
                            R.K.I.T.M
                        </h1>
                    </div>



                    <!-- Right: Icons and Profile -->
                    <div class="d-flex align-items-center gap-3 ms-auto">

                        <!-- Search Input -->
                        <form class="d-flex align-items-center">
                            <input class="form-control form-control-sm me-2" type="search" placeholder="Please search" />
                            <button class="btn btn-outline-secondary btn-sm" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </form>

                        <!-- Notification Icon -->
                        <button type="button" class="btn btn-link position-relative p-0">
                            <i class="bi bi-bell fs-5 text-dark"></i>
                            <span class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle"></span>
                        </button>

                        <!-- Language Selector -->
                        <select class="form-select form-select-sm w-auto">
                            <option>EN</option>
                            <option>FR</option>
                            <option>DE</option>
                        </select>

                        <!-- User Avatar -->
                        <img src="https://via.placeholder.com/36" class="rounded-circle border border-primary" alt="User" width="36" height="36" />

                        <!-- User Info and Logout -->
                        <div class="d-flex align-items-center">
                            <span class="me-2">@User.Identity.Name</span>
                            <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">Logout</button>
                            </form>
                        </div>

                    </div>
                </div>
            </nav>

            <!-- Page Content -->
            <div class="mb-5">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            <footer class="bg-primary footer" style="position: fixed;margin-bottom: 0px; height:50px">
                <div class="container d-flex justify-content-between align-items-center text-white">
                    <span>&copy; 2025 - SchoolERP.UI</span>
                    <a class="text-white text-decoration-underline" asp-area="" asp-controller="Home" asp-action="Privacy">
                        Privacy
                    </a>
                </div>
            </footer>
        </div>

       
        
        <!-- Footer -->
       
    </div>




