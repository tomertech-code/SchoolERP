                            </li>  <li class="menu-item">
                                <a href="@Url.Action("Index", "Timetable")" class="menu-link">
                                    <span class="material-symbols-rounded">schedule</span>
                                    <span class="menu-label">Timetable</span>
                                </a>
                            </li>  <li class="menu-item">
                                <a href="@Url.Action("Index", "Timetable")" class="menu-link">
                                    <span class="material-symbols-rounded">schedule</span>
                                    <span class="menu-label">Timetable</span>
                                </a>
                            </li>  <li class="menu-item">
                                <a href="@Url.Action("Index", "Timetable")" class="menu-link">
                                    <span class="material-symbols-rounded">schedule</span>
