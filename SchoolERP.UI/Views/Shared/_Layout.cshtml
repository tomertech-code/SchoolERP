    <title>@ViewData["Title"] - SchoolERP.UI</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SchoolERP.UI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" /> <!-- Sidebar specific styles -->
